<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="650.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.jorgetargz.client.gui.screens.vault_management.VaultsManagementController">

    <Label layoutX="94.0" layoutY="86.0" text="%OpenVault"/>
    <MFXComboBox fx:id="cmbOpenMyVaults" layoutX="98.0" layoutY="114.0" prefHeight="55.0" prefWidth="290.0"/>
    <MFXPasswordField fx:id="txtPasswordMyVault" layoutX="416.0" layoutY="108.0" prefHeight="66.0" prefWidth="198.0"
                      promptText="%PasswordRequired"/>
    <MFXButton layoutX="647.0" layoutY="124.0" mnemonicParsing="false" onAction="#openMyVault" prefHeight="34.0"
               prefWidth="166.0" text="%Open"/>

    <Label layoutX="93.0" layoutY="193.0" text="%CreateVault"/>
    <MFXTextField fx:id="txtNameVaultCreate" floatMode="BORDER" layoutX="99.0" layoutY="218.0" prefHeight="54.0"
                  prefWidth="206.0" promptText="%VaultName"/>
    <MFXPasswordField fx:id="txtPasswordCreate" layoutX="324.0" layoutY="212.0" prefHeight="66.0" prefWidth="198.0"
                      promptText="%PasswordRequired"/>
    <MFXToggleButton fx:id="readByAll" layoutX="562.0" layoutY="201.0" text="%ReadAll"/>
    <MFXToggleButton fx:id="writeByAll" layoutX="561.0" layoutY="247.0" text="%WriteAll"/>
    <MFXButton layoutX="716.0" layoutY="230.0" mnemonicParsing="false" onAction="#createVault" prefHeight="34.0"
               prefWidth="166.0" text="%Create"/>

    <Label layoutX="91.0" layoutY="302.0" text="%OpenOtherUserVault"/>
    <MFXTextField fx:id="txtNameVaultOther" floatMode="BORDER" layoutX="97.0" layoutY="327.0" prefHeight="54.0"
                  prefWidth="206.0" promptText="%VaultName"/>
    <MFXTextField fx:id="txtUsernameOwner" floatMode="BORDER" layoutX="321.0" layoutY="327.0" prefHeight="54.0"
                  prefWidth="198.0" promptText="%Username"/>
    <MFXPasswordField fx:id="txtPasswordOther" layoutX="536.0" layoutY="321.0" prefHeight="66.0" prefWidth="198.0"
                      promptText="%PasswordRequired"/>
    <MFXButton layoutX="759.0" layoutY="337.0" mnemonicParsing="false" onAction="#openOtherUserVault" prefHeight="34.0"
               prefWidth="166.0" text="%Open"/>

    <Label layoutX="94.0" layoutY="402.0" text="%ChangePassword"/>
    <MFXComboBox fx:id="cmbChangePassMyVaults" layoutX="98.0" layoutY="430.0" prefHeight="55.0" prefWidth="225.0"/>
    <MFXPasswordField fx:id="txtVaultOldPassword" layoutX="340.0" layoutY="424.0" prefHeight="66.0" prefWidth="187.0"
                      promptText="%OldPassword"/>
    <MFXPasswordField fx:id="txtVaultNewPassword" layoutX="544.0" layoutY="424.0" prefHeight="66.0" prefWidth="187.0"
                      promptText="%NewPassword"/>
    <MFXButton layoutX="762.0" layoutY="440.0" mnemonicParsing="false" onAction="#changePassword" prefHeight="34.0"
               prefWidth="166.0" text="%Change"/>

    <Label layoutX="94.0" layoutY="508.0" text="%DeleteVault"/>
    <MFXComboBox fx:id="cmbDeleteMyVaults" layoutX="100.0" layoutY="532.0" prefHeight="55.0" prefWidth="226.0"/>
    <MFXButton layoutX="360.0" layoutY="542.0" mnemonicParsing="false" onAction="#doDelete" prefHeight="34.0"
               prefWidth="166.0" text="%Delete"/>

</AnchorPane>
